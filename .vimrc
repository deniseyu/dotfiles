execute pathogen#infect()

syntax on
filetype plugin indent on

colorscheme molokai
set splitbelow
set splitright
set number
set tabstop=2
set softtabstop=2
set expandtab
set encoding=utf-8
set shiftwidth=2
set smarttab
set expandtab
set nocompatible
set autoindent
set showcmd
set showmode
set backspace=indent,eol,start
set textwidth=79
set wrap linebreak nolist
set formatoptions+=t
set colorcolumn=85
set cursorline
hi CursorLine term=bold cterm=bold guibg=Grey40
